<%- include ("../partials/header") %>

<header class="jumbotron">
    <div class="container">
        <h1>Welcome to Russia!</h1>
        <p>View our hand-picked articles from all over the world</p>
        <p>
            <% if(currentUser) { %>
                <% if(currentUser.role === 'author' || currentUser.isAdmin) { %>
                <a class="btn btn-primary btn-lg" href="/articles/new"> Add New Article</a>
                <% } %>
            <% } %>
        </p>
    </div>
</header>
<div id="whoopywoo" class="row text-center">
    <% articles.forEach(article => { %>
        <% if(article.isApproved) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <div class="caption">
                        <h4> <%= article.title %></h4>
                    </div>
                    <p>
                        <p><%= article.description %></p>
                        <a class="btn btn-primary" href="/articles/<%= article._id %>">More Info</a>
                    </p>
                </div>
            </div>
        <% } %>
    <% }) %>
</div>
<%- include ("../partials/footer") %>