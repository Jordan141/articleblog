<link rel="stylesheet" href="/stylesheets/listed-article.css">
<div class='listed-article text-read-friendly'>
  <img 
    class='listed-article__image cursor-change center-background img-fit'
    __data="<%=article.title%>" 
    src="/articles/image/<%=article.title%>"
  >
  <div class='listed-article__content'>
    <% if(isReviewing) {%>
      <a href="/articles/approve/<%= article.title %>">
        <h2 class='listed-article__header'><%= article.title %></h2>
      </a>
    <% } else { %>
      <a href="/articles/<%= article.title %>">
        <h2 class='listed-article__header'><%= article.title %></h2>
      </a>
    <% } %>
    <div class='listed-article__author'>
        by <a href="/authors/<%= article.author.fullname %>">  
                <%= article.author.username %>
            </a>
    </div>
    <div class='listed-article__text'>
      <%= article.description %>
      <!-- If the text is too long, EJS should put "..." at the end and cut the text. -->
    </div>
  </div>
</div>
