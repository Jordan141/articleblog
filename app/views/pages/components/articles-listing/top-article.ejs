<link rel="stylesheet" href="/stylesheets/top-article/top-article.css">
<div class='top-article text-read-friendly'>
  <img 
    class='top-article__image cursor-change center-background img-fit' 
    __data="<%=article.link%>"
    src="/articles/image/<%=article.link%>"
  >
  <div class='top-article__image-spacer'></div> 
  <a href="/articles/<%= article.link %>">
    <h2 class='top-article__header'><%=article.title%></h2>
  </a>
  <div class='top-article__author'>
    by <a href="/authors/<%= article.author.link %>">  
      <%= article.author.fullname %>
    </a>
  </div>
  <div class='top-article__text'><%=article.description%></div>
</div>
