<%- include("../partials/header") %>
<title><%=title%></title>
<div class='page__center'>
    <div class='page__view'>
      <div class='page__content'>
        <div class='register'>
            <div class='register__input-section'>
              <h1 class='register__header'>Register</h1>
              <form action="/register" method="post">
                <input class='input' placeholder='Username' type="text" name="username" required minlength="<%=limits.USERNAME_MIN_LENGTH%>" maxlength="<%=limits.USERNAME_MAX_LENGTH%>"></input>
                <input class='input' placeholder='Email' type="email" name="email" required minlength="<%=limits.EMAIL_MIN_LENGTH%>" maxlength="<%=limits.EMAIL_MAX_LENGTH%>"></input>
                <input class='input' placeholder='Password' type="password" name="password" required minlength="<%=limits.PASSWORD_MIN_LENGTH%>" maxlength="<%=limits.PASSWORD_MAX_LENGTH%>"></input>
                <input class='input' placeholder='Repeat Password' type="password" required minlength="<%=limits.PASSWORD_MIN_LENGTH%>" maxlength="<%=limits.PASSWORD_MAX_LENGTH%>"></input>
                <img src='/captcha'  class='captcha'/>
                <input class='input' type='captcha' name='captcha' placeholder='captcha' autocomplete='off' required minlength="4" maxlength="4">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class='button-primary'>Proceed</button>
            </form>
            <a href='/login'><button class='button-secondary'>Already have an account? Log in here</button></a> 
            </div>
          </div>
      </div>
    </div>
  </div>
  <link rel="stylesheet" href="/stylesheets/register.css">
<%- include("../partials/footer") %>