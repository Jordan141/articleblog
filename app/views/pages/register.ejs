<%- include("../partials/header") %>
<div class='page__center'>
    <div class='page__view'>
      <div class='page__content'>
        <div class='register'>
            <div class='register__input-section'>
              <h1 class='register__header'>Register</h1>
              <form action="/register" method="post">
                <input class='input' placeholder='Username' type="text" name="username" required></input>
                <input class='input' placeholder='Email' type="email" name="email" required></input>
                <input class='input' placeholder='Password' type="password" name="password" required></input>
                <input class='input' placeholder='Repeat Password' type="password" required></input>
                <img src='/captcha' />
                <input class='input' type='captcha' name='captcha' placeholder='captcha' autocomplete='off' required>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class='button-primary'>Proceed</button>
            </form>
            </div>
          </div>
      </div>
    </div>
  </div>
  <link rel="stylesheet" href="/stylesheets/register.css">
<%- include("../partials/footer") %>