<%
  /*
    Map format: {
      maxScreenWidth: imageWidth
    }

    i.e.
    {
      650: 650
    }
  */
  function generateSrcSet(url, map) {
    const SIZES = [100, 150, 256, 512, 1024, 2048]
    const srcset = SIZES.map(size => `${url}?width=${size} ${size}w`).join(', ')
    return `srcset=${srcset} sizes="(max-width: 600px) 150w"`
  }
%>

<%- 
  generateSrcSet(url)
%> 