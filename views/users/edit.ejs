<% include ../partials/header %>
<div class="row">
    <h1 style="text-align: center">Edit Profile!</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action"/users/<%= user._id %>?_method=PUT" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="firstName" value="<%= user.firstName %>" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="lastName" value="<%= user.lastName %>" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="email" name="email" value="<%= user.email %>" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="avatar" value="<%= user.avatar %>" required>
            </div>
            <label for="bio">Bio</label> 
            <textarea class="form-control" type="bio" name="bio" rows="5" required> <%= user.bio %> </textarea>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Edit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>